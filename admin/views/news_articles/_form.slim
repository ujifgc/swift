= f.input :title
= f.input :info, :as => :text, :markdown => true
= f.input :text, :as => :text, :markdown => true
= f.input :news_rubric_id, :as => :select, :selected => @object.news_rubric_id, :collection => NewsRubric.all, :fields => [ :title, :id ], :include_blank => false
= f.input :date, :as => :datetime
= f.input :slug
- allow :auditor do
  = f.input :is_published, :as => :boolean
  = f.input :publish_at, :as => :datetime
  
- allow :editor do
  = partial 'base/meta', :locals => { :f => f }

= f.submits :append => mk_timestamps( @object )
