source 'https://rubygems.org'

# console sugar for development
group :development, :test do
  gem 'rake'
  gem 'awesome_print'
  gem 'ruby-progressbar'
end

# basic sugar support
gem 'activesupport', :require => 'active_support/core_ext/object/conversions'

# templates and content parsing
gem 'yajl-ruby', :require => 'yajl'
gem 'multi_json'
gem 'slim'
gem 'redcarpet', :github => 'ujifgc/redcarpet'
gem 'sinatra-flash', :require => 'sinatra/flash'
gem 'padrino', :github => 'ujifgc/padrino-framework'

# database ORM
gem 'bcrypt-ruby'
gem 'dm-types'
gem 'dm-validations'
gem 'dm-timestamps'
gem 'dm-migrations', :require => false
gem 'dm-constraints'
gem 'dm-aggregates'
gem 'dm-core', '~> 1.2.1'
gem 'dm-mysql-adapter'

# file, picture, js, css assets
gem 'nozzle', '~> 0.1.1'
gem 'rack-pipeline', '~> 0.0.2'

# authorization and authentication
gem 'omniauth'
gem 'rack-openid', :require => "rack/openid"
gem 'omniauth-openid'
